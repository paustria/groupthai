{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "import/no-unresolved": [2, {
      "ignore": ["^(~|app|utils)"]
    }],
    "import/extensions": [0],
    "import/no-extraneous-dependencies": [0],
    "react/jsx-filename-extension": [0],
    "react/prop-types": [1, {
      "ignore": [
        "classes",
        "match"
      ]
    }],
    "react/forbid-prop-types": [0],
    "react/no-did-mount-set-state": [0],
    "no-confusing-arrow": [0],
    "no-underscore-dangle": [1, {
        "allow": ["_id", "__REDUX_DEVTOOLS_EXTENSION_COMPOSE__"]
    }],
    "import/no-unresolved": [2, {
      "ignore": ["^(shared)"]
    }]
  }
}
